<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="debug" packages="eu.tsystems.mms.tic.testframework.logging">
    <Appenders>
        <File name="PreTestFile" fileName="logs/pre-test-log4j.log" append="false">
            <PatternLayout>
                <Pattern>[%t][%p]%contextIds: %c{2} - %m%n</Pattern>
            </PatternLayout>
        </File>
        <Async name="Async">
            <AppenderRef ref="PreTestFile"/>
        </Async>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="PreTestFile"/>
        </Root>
    </Loggers>
</Configuration>
